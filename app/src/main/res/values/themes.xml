<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="textInputLayout">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="endIconDrawable">@drawable/ic_close_edit_text</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconCheckable">true</item>
    </style>
    <style name="textInputEditText">
        <item name="android:hint">@string/editText_hint</item>
        <item name="backgroundTint">@color/gray_98</item>
        <item name="android:digits">+() 1234567890-</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="textView_span">
        <item name="android:linksClickable">true</item>
        <item name="android:text">@string/spanText</item>
    </style>
    <style name="button_style">
        <item name="android:text">@string/btn_continue</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">#F2F26D</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="toolbar_title">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>